#include <stdio.h>
#define CAP 100
int main() {
 int a[CAP] = {10, 20, 40, 50};
 int n = 4;
 int pos = 2; // insert at index 2
 int x = 30;
 if (pos < 0 || pos > n) {
 printf("Invalid position\n");
 return 0;
 }
 if (n == CAP) {
 printf("Array is full\n");
 return 0;
 }
 // shift right from end to pos
 for (int i = n; i > pos; i--) {
 a[i] = a[i-1];
 }
 a[pos] = x;
 n++;
 for (int i = 0; i < n; i++) printf("%d ", a[i]);
 printf("\n");
 return 0;
}
